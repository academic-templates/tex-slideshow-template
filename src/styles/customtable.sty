% IMPORTANT NOTE: this style file is made for working with memoir class
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{styles/customtable}[2016/08/25 Custom Table elements package]
\RequirePackage{array}
\RequirePackage{longtable}
\RequirePackage{multirow}
\RequirePackage{pifont} 
% shortcuts
\newcommand{\mc}[2]{\multicolumn{#1}{c}{#2}}
\newcommand{\mr}[2]{\multirow{#1}{*}{#2}}
\newcommand{\mytoprule}{\specialrule{1pt}{0em}{0em}}
% define various customization for use in tables
\newcolumntype{L}[1]{>{\raggedright\arraybackslash}m{#1}}
\newcolumntype{C}[1]{>{\centering\arraybackslash}m{#1}}
\newcolumntype{R}[1]{>{\raggedleft\arraybackslash}m{#1}}
\newcolumntype{V}[2]{>{\adjustbox{angle=#1,lap=\width-(#2)}\bgroup}l<{\egroup}}
\newcommand*\rot{\multicolumn{1}{V{90}{-0.1em}}}
\newcommand{\hf}[2]{\multicolumn{1}{>{\centering\arraybackslash}m{#1}}{\textbf{#2}}}
\newcommand{\multiline}[1]{\multicolumn{1}{@{}m{6cm}@{}}{#1}}
\setlength\extrarowheight{0pt}
% define some graphics for use in tables
\newcommand*\ok{\ding{51}}
\newcommand*\nok{\ding{55}}
\newcommand*\arr{\ding{224}}
% dash lines for tabular
\newcommand{\dotrule}[1]{\parbox[t]{#1}{\dotfill}}
\newcommand{\dotline}{\dotrule{\linewidth}}
% define an environment for vertical timelines
\definecolor{bluebell}{rgb}{0.74, 0.74, 0.92}
\def\timelinecolor{bluebell}
\newcommand{\timelinerule}{\color{\timelinecolor}\makebox[0pt]{\textbullet}\hskip-0.5pt\vrule width 1pt\hspace{\labelsep}}
%\DeclareCaptionFormat{timeline}{#1#2#3}
\newenvironment{vtimeline}{
  \begingroup
  \centering
  \renewcommand*{\arraystretch}{1.3}
  \arrayrulecolor{\timelinecolor}
  \begin{longtable}{@{\,}r <{\hskip 2pt} !{\timelinerule} >{\raggedright\arraybackslash}L{.7\linewidth}}
}{\end{longtable}\endgroup}
\newenvironment{features}{
  \begingroup
  \tiny
  \vspace{-.7cm}
  \begin{columns}
  \centering
  \column{\dimexpr\paperwidth-10pt}
  \arrayrulecolor{white}
  \setlength{\arrayrulewidth}{1pt}
  \renewcommand*{\arraystretch}{1.2}
  \rowcolors{2}{gray!25}{white}
  \begin{longtable}[c]{L{2.6cm}|C{1.1cm}|L{5cm}|C{1.3cm}}
  \rowcolor{gray!50}
  \hf{2.6cm}{Feature} & \hf{1.1cm}{Type} & \hf{5cm}{Description} & \hf{1.3cm}{Source} \\
}{\end{longtable}\end{columns}\endgroup}
